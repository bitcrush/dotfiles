! ---| rofi |--- {{{1
rofi.modi:                          run,window,ssh
rofi.width:                         1680
rofi.lines:                         9
rofi.columns:                       2
rofi.font:                          Terminess Powerline 12
rofi.location:                      1
rofi.padding:                       5
rofi.bw:                            1
rofi.xoffset:                       0
rofi.yoffset:                       18
rofi.terminal:                      urxvt
rofi.sidebar-mode:                  true
rofi.run-command:                   {cmd}
rofi.run-shell-command:             {terminal} -e {cmd}
rofi.ssh-client:                    ssh
rofi.ssh-command:                   {terminal} -e {ssh-client} {host}
